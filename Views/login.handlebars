<main>
<form action="api/user/login" method="post">
        <h3>User Login</h3>
        <div class="email-login">
          <input
            id="email-loginId"
            type="email"
            name="emailInput"
            placeholder="youremail@emailaddress.com"
          />
          <input
            id="password-loginId"
            type="password"
            name="passwordInput"
            placeholder="your password"
          />

          <button class="btn" type="submit">Login</button>
        </div>
      </form>
</main>
