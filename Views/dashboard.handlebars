<main>
  <h2 class="col s12">Welcome to your dashboard</h2>
  <div class="modal-content">
    <div class="row">
      
    </div>
  </div>
  <div class="modal-content">
    <form class="addPost-form" id="addPost-formId">
      <div class="row">
        <h3 class="col s12">Add New Post</h3>
        <div class="parent">
          <input
            class="input"
            id="post-name"
            type="name"
            name="post-name"
            placeholder="What's your post titled?"
          />
          <input
            class="input"
            id="description"
            type="text"
            name="description"
            placeholder="What's on your mind?"
          />
          <button id="addToDashboard" class="btn" type="submit">Add to your
            addToDashboard!</button>
        </div>
      </div>
    </form>
  </div>

  <div class="modal-content">
    <div class="row">
      <h3 class="col s12">Your Posts</h3>
      <div class="edit-post">
        {{#each posts}}
        <div class="individualPost">
          <h4 class="post_name">{{this.post_name}}</h4>
          <p class="description">{{this.description}}</p>
          <p class="timestamp">{{formatDate this.createdAt "MM/DD/YYYY"}}</p>
          <button class="editPost-btn btn" data-post_id="{{this.id}}" href="/edit/{{this.id}}">Edit</button>
        </div>
        <div>
          <form class="edit-post-btn-form hide" id="editPostForm{{this.id}}">
            <label for="editPostName{{this.id}}">Post Name</label>
            <input type="text" id="editPostName{{this.id}}" value="{{this.name}}" placeholder="Don't forget to add a post name, or it'll come back blank!">
            <label for="editPostDescription{{this.id}}">Post Description</label>
            <textarea id="editPostDescription{{this.id}}">{{this.description}}</textarea>
            <button class='saveEdit-btn btn' id="saveEdit-btn-{{this.id}}" data-post_id="{{this.id}}">Save</button>
            <button class="cancelEdit-btn btn" id="cancelEdit-btn-{{this.id}}" data-post_id="{{this.id}}">Cancel</button>
          </form>
        </div>
        <div>
          <form class="comment-form" id="commentForm{{this.id}}">
            <label for="commentOnPost{{this.id}}">Leave a Comment!</label>
            <textarea id="commenEntry{{this.id}}" placeholder="Write your comment here!"></textarea>
            <button class="comment-btn btn" id="comment-btn-{{this.id}}" data-post_id="{{this.id}}">Comment</button>
            </form>
        </div>
      </div>
      {{/each}}
    </div>
  </div>

</main>
<script src="/js/add-post.js"></script>
<script src="/js/edit-post.js"></script>
<script src="/js/comment-post.js"></script>