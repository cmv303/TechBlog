<main class="landing-page">
  {{#if email}}
    <h1>Thanks for joining us, {{email}}!</h1>
  {{else}}

    {{#if loggedIn}}
      <h1>Welcome back, {{email}}!</h1>
      <button id="logout" class="btn logout">Logout</button>
    {{else}}

      <form action="login-form" method="post">
        <h3>User Login</h3>
        <div class="email-login">
          <input
            id="email-loginId"
            type="email"
            name="emailInput"
            placeholder="youremail@emailaddress.com"
          />
          <input
            id="password-loginId"
            type="password"
            name="passwordInput"
            placeholder="your password"
          />

          <button class="btn" type="submit">Login</button>
        </div>
      </form>
      <br />
      <br />

      <form action="signup-form">
        <h3>New? Sign Up!</h3>
        <div>
          <input
            id="email-signUpId"
            type="email"
            name="emailInput"
            placeholder="youremail@emailaddress.com"
          />
          <input
            id="password-signUpId"
            type="password"
            name="passwordInput"
            placeholder="your password"
          />

          <button class="btn" id="signUpBtn" type="submit">Submit!</button>
        </div>
      </form>

      <script src="/js/login.js"></script>
      <script src="/js/logout.js"></script>

      {{!-- Is this needed? --}}
      <script src="/js/signup.js"></script>
    {{/if}}
  {{/if}}
</main>